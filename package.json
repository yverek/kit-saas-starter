{
  "name": "kit-saas-starter",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "dev": "vite dev",
    "build": "vite build",
    "preview": "pnpm run build && wrangler pages dev .svelte-kit/cloudflare",
    "test": "pnpm run test:integration && pnpm run test:unit",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "lint": "prettier --check . && eslint .",
    "format": "prettier --write .",
    "test:integration": "playwright test",
    "test:unit": "vitest",
    "build-cf-types": "pnpm exec wrangler types && mv worker-configuration.d.ts src/",
    "drizzle:migrate": "drizzle-kit generate:sqlite",
    "drizzle:push:dev": "pnpm wrangler d1 migrations apply kss-prod --local",
    "drizzle:push:prod": "pnpm wrangler d1 migrations apply kss-prod"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20240312.0",
    "@playwright/test": "^1.42.1",
    "@sveltejs/adapter-auto": "^3.1.1",
    "@sveltejs/adapter-cloudflare": "^4.2.0",
    "@sveltejs/kit": "^2.5.4",
    "@sveltejs/vite-plugin-svelte": "^3.0.2",
    "@total-typescript/ts-reset": "^0.5.1",
    "@types/eslint": "8.56.5",
    "@typescript-eslint/eslint-plugin": "^7.2.0",
    "@typescript-eslint/parser": "^7.2.0",
    "autoprefixer": "^10.4.18",
    "drizzle-kit": "^0.20.14",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-svelte": "2.36.0-next.10",
    "pino-pretty": "^10.3.1",
    "postcss": "^8.4.35",
    "postcss-load-config": "^5.0.3",
    "prettier": "^3.2.5",
    "prettier-plugin-svelte": "^3.2.2",
    "prettier-plugin-tailwindcss": "^0.5.12",
    "svelte": "5.0.0-next.78",
    "svelte-check": "^3.6.7",
    "svelte-turnstile": "^0.5.0",
    "sveltekit-flash-message": "^2.4.4",
    "sveltekit-rate-limiter": "^0.4.3",
    "tailwindcss": "^3.4.1",
    "tslib": "^2.6.2",
    "typescript": "^5.4.2",
    "vite": "^5.1.6",
    "vite-plugin-kit-routes": "^0.6.1",
    "vite-plugin-top-level-await": "^1.4.1",
    "vite-plugin-wasm": "^3.3.0",
    "vitest": "^1.3.1",
    "wrangler": "^3.33.0"
  },
  "type": "module",
  "dependencies": {
    "@lucia-auth/adapter-sqlite": "^3.0.1",
    "arctic": "^1.2.1",
    "bits-ui": "^0.19.7",
    "check-password-strength": "^2.0.10",
    "clsx": "^2.1.0",
    "drizzle-orm": "^0.30.1",
    "formsnap": "^0.5.1",
    "lucia": "^3.1.1",
    "lucide-svelte": "^0.357.0",
    "mode-watcher": "^0.3.0",
    "oslo": "^1.1.3",
    "pino": "^8.19.0",
    "svelte-sonner": "^0.3.19",
    "sveltekit-superforms": "^2.9.0",
    "tailwind-merge": "^2.2.1",
    "tailwind-variants": "^0.2.0",
    "worker-password-auth": "^1.0.0",
    "zod": "^3.22.4"
  }
}
